{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@merlinn/helios-core/*": ["packages/helios-core/src/*"],
      "@merlinn/helios-three-plugin/*": ["packages/helios-three-plugin/src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true
  }
}
